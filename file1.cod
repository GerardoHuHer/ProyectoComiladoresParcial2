read x;
read y;
read z;
if x > 0 then
    suma := x + y + z;
    write suma;
    if suma > 100 then
        resultado := suma * 2;
        write resultado
    else
        resultado := suma / 2;
        write resultado
    end;
    contador := 0;
    repeat
        temp := (x + y) * z - contador;
        write temp;
        x := x - 1;
        contador := contador + 1
    until x <= 0
else
    resta := y - z;
    write resta;
    repeat
        producto := y * z;
        write producto;
        y := y - 1
    until y = 0
end;
final := (x + y + z) / 3;
write final
